<UserControl x:Class="MVVM_RecipeHandler.Views.OpenFileDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_RecipeHandler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              xmlns:converter="clr-namespace:MVVM_RecipeHandler_Models.Converter;assembly=MVVM_RecipeHandler_Models"
             xmlns:viewmodels="clr-namespace:MVVM_RecipeHandler.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:OpenFileDialogVM}">
    <UserControl.Resources>
        <converter:Base64ImageConverter x:Key="BTN_CONV"/>
    </UserControl.Resources>
    <Grid>
        <TextBox Text="{Binding SelectedPath}" />
        <Button Command="{Binding OpenCommand}" >Browse</Button>
        <Button Height="70" Width="70">
            <Image Source="{Binding Base64String, Converter={StaticResource BTN_CONV}}"/>
        </Button>
    </Grid>
</UserControl>
